<div class="container">
  <button type="button" class="btn btn-lg btn-info btn-block">News</button>

  <br>
  <div class="text-right">
    <%= link_to 'New news', new_admin_news_path, class: 'btn btn-secondary' %>
  </div>
  <br>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @news.each_with_index do |news, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= news.title %></td>
          <td>
            <%= link_to 'Show', [:admin, news], class: 'btn btn-sm btn-info' %>
            <%= link_to 'Edit', edit_admin_news_path(news), class:'btn btn-sm btn-info' %>
            <%= link_to 'Destroy', [:admin, news], method: :delete, data: { confirm: 'Are you sure?' },
                        class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

</div>
