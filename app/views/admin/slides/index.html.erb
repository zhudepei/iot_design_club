<div class="container">
  <button type="button" class="btn btn-lg btn-info btn-block">Slides</button>

  <br>
  <div class="text-right">
    <%= link_to 'New Slide', new_admin_slide_path, class: 'btn btn-secondary' %>
  </div>
  <br>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @slides.each_with_index do |slide, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= slide.name %></td>
          <td><%= image_tag slide.picture, width: 30 %></td>
          <td>
            <%= link_to 'Show', [:admin, slide], class: 'btn btn-sm btn-info' %>
            <%= link_to 'Edit', edit_admin_slide_path(slide), class: 'btn btn-sm btn-info' %>
            <%= link_to 'Destroy', [:admin, slide], method: :delete, data: { confirm: 'Are you sure?' },
                        class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>
