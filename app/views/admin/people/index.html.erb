<div class="container">
  <button type="button" class="btn btn-lg btn-info btn-block">People</button>

  <br>
  <div class="text-right">
    <%= link_to 'New Person', new_admin_person_path, class: 'btn btn-secondary' %>
  </div>
  <br>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>姓名</th>
      <th>邮箱</th>
      <th>入学年</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @people.each do |person| %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.email %></td>
          <td><%= person.period %></td>
          <td>
            <%= link_to 'Show', [:admin, person], class: 'btn btn-sm btn-info' %>
            <%= link_to 'Edit', edit_admin_person_path(person), class: 'btn btn-sm btn-info' %>
            <%= link_to 'Destroy', [:admin, person], method: :delete, data: { confirm: 'Are you sure?' },
                        class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>
